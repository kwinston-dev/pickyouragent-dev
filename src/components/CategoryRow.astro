---
import type { Agent } from '../agents/featureSetSchema';
import { FeatureStatus, SubFeatureStatus } from '../agents/featureSetSchema';
import Badge from './Badge.astro';

interface Props {
  categoryKey: string;
  categoryName: string;
  features: string[];
  agents: Agent[];
  mainColor: string;
  secondaryColor: string;
  categorySlug: string;
  featureDisplayNames: Record<string, string>;
}

const { categoryKey, categoryName, features, agents, mainColor, secondaryColor, categorySlug, featureDisplayNames } = Astro.props;

// Type guard to check if a value is a FeatureStatus enum
function isFeatureStatus(value: any): value is FeatureStatus {
  return typeof value === 'string' && Object.values(FeatureStatus).includes(value as FeatureStatus);
}

// Helper function to aggregate subfeature statuses
function aggregateStatus(statuses: SubFeatureStatus[]): FeatureStatus {
  if (statuses.length === 0) {
    return FeatureStatus.NotSupported;
  }
  
  const allSupported = statuses.every(s => s === SubFeatureStatus.Supported);
  const allNotSupported = statuses.every(s => s === SubFeatureStatus.NotSupported);
  
  if (allSupported) {
    return FeatureStatus.Supported;
  } else if (allNotSupported) {
    // If all subfeatures are NotSupported but feature itself is not explicitly NotSupported,
    // show PartiallySupported (not NotSupported)
    return FeatureStatus.PartiallySupported;
  } else {
    // Mix of supported and not-supported subfeatures
    return FeatureStatus.PartiallySupported;
  }
}

// Helper function to get subfeature statuses from a feature object
function getSubfeatureStatuses(featureValue: any, featureKeys: string[]): SubFeatureStatus[] {
  if (isFeatureStatus(featureValue)) {
    return [];
  }
  const featureObj = featureValue as Record<string, SubFeatureStatus>;
  return featureKeys.map((key) => featureObj[key]).filter((s): s is SubFeatureStatus => s !== undefined);
}

// Helper function to get a single subfeature status
function getSubfeatureStatus(featureValue: any, featureKey: string): SubFeatureStatus {
  if (isFeatureStatus(featureValue)) {
    return SubFeatureStatus.NotSupported;
  }
  const featureObj = featureValue as Record<string, SubFeatureStatus>;
  return featureObj[featureKey] || SubFeatureStatus.NotSupported;
}
---

<tr class="category-row" data-category={categoryKey} style={`--main-feature-color: ${mainColor}; --secondary-feature-color: ${secondaryColor}`}>
    <td class="category-cell">
      <a href={`/features/${categorySlug}`} class="category-name category-link">
        {categoryName}
      </a>
    </td>
    {agents.map((agent) => {
      // Get the feature value for this category
      const featureValue = agent.features[categoryKey as keyof typeof agent.features];
      
      // Check if the feature itself is a status (entire feature is NotSupported)
      if (isFeatureStatus(featureValue)) {
        return (
          <td>
            <Badge status={featureValue} />
          </td>
        );
      }
      
      // Otherwise, aggregate all subfeature statuses in this category
      const statuses = getSubfeatureStatuses(featureValue, features);
      const aggregatedStatus = aggregateStatus(statuses);
      return (
        <td>
          <Badge status={aggregatedStatus} />
        </td>
      );
    })}
  </tr>
  {features.map((featureKey) => (
    <tr class="feature-row" data-category={categoryKey} style={`--main-feature-color: ${mainColor}; --secondary-feature-color: ${secondaryColor}`}>
      <td class="feature-cell">
        <a href={`/features/${categorySlug}#${featureKey}`} class="feature-name feature-link">
          {featureDisplayNames[featureKey]}
        </a>
      </td>
      {agents.map((agent) => {
        const featureValue = agent.features[categoryKey as keyof typeof agent.features];
        const status = getSubfeatureStatus(featureValue, featureKey);
        return (
          <td>
            <Badge status={status} />
          </td>
        );
      })}
    </tr>
  ))}

<style>
  .category-row {
    border-top: 1px solid var(--border-light);
    background-color: color-mix(in srgb, var(--main-feature-color) 6%, transparent);
  }

  .category-row .category-cell,
  .feature-row .feature-cell {
    position: relative;
    padding-left: 1.75rem;
  }

  .category-row .category-cell::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 5px;
    background-color: var(--main-feature-color);
  }

  .feature-row .feature-cell::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 3px;
    background-color: var(--main-feature-color);
    opacity: 0.5;
  }

  /* Category row cells - larger padding */
  .category-row td {
    padding: 1.1rem 1.25rem;
  }

  .category-name {
    font-weight: 600;
    font-size: 0.95rem;
    color: var(--text-primary);
    letter-spacing: -0.01em;
  }

  /* Feature rows - compact subordinate items */
  .feature-row td {
    padding: 0.5rem 1.25rem;
  }

  .feature-name {
    font-size: 0.82rem;
    color: var(--text-secondary);
    padding-left: 1.25rem;
  }

  /* Responsive */
  @media (max-width: 900px) {
    .category-row td {
      padding: 0.9rem 0.75rem;
    }
    
    .feature-row td {
      padding: 0.4rem 0.75rem;
    }
  }

  @media (max-width: 600px) {
    .feature-name {
      padding-left: 0.75rem;
    }
    
    .category-row td {
      padding: 0.8rem 0.6rem;
    }
    
    .feature-row td {
      padding: 0.35rem 0.6rem;
    }
  }
</style>

