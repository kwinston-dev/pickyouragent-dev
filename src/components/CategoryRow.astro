---
import type { Agent } from '../agents/featureSetSchema';
import { ParsedFeature } from '../agents/parsedTable';
import Badge from './Badge.astro';
import LinksList from './LinksList.astro';

interface Props {
  feature: ParsedFeature;
  agents: Agent[];
}

const { feature, agents } = Astro.props;
---

<tr class="category-row" data-category={feature.key} style={`--main-feature-color: ${feature.mainColor}; --secondary-feature-color: ${feature.secondaryColor}`}>
    <td class="category-cell">
      <a href={`/features/${feature.slug}`} class="category-name category-link">
        {feature.name}
      </a>
    </td>
    {agents.map((agent) => {
      const status = feature.statusByAgent.get(agent.meta.id) || feature.aggregatedStatus;
      return (
        <td>
          {feature.key === 'subscriptions' ? (
            feature.getLinksByAgent(agent.meta.id).length > 0 ? (
              <LinksList links={feature.getLinksByAgent(agent.meta.id)} mainColor={feature.mainColor} />
            ) : (
              <Badge status={status} />
            )
          ) : (
            <Badge status={status} />
          )}
        </td>
      );
    })}
  </tr>
  {feature.getSubfeatures().map((subfeature) => (
    <tr class="feature-row" data-category={feature.key} style={`--main-feature-color: ${feature.mainColor}; --secondary-feature-color: ${feature.secondaryColor}`}>
      <td class="feature-cell">
        <a href={`/features/${feature.slug}#${subfeature.key}`} class="feature-name feature-link">
          {subfeature.name}
        </a>
      </td>
      {agents.map((agent) => {
        const status = subfeature.statusByAgent.get(agent.meta.id) || subfeature.aggregatedStatus;
        return (
          <td>
            <Badge status={status} />
          </td>
        );
      })}
    </tr>
  ))}

<style>
  .category-row {
    border-top: 1px solid var(--border-light);
    background-color: color-mix(in srgb, var(--main-feature-color) 6%, transparent);
  }

  .category-row .category-cell,
  .feature-row .feature-cell {
    position: relative;
    padding-left: 1.75rem;
  }

  .category-row .category-cell::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 5px;
    background-color: var(--main-feature-color);
  }

  .feature-row .feature-cell::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 3px;
    background-color: var(--main-feature-color);
    opacity: 0.5;
  }

  /* Category row cells - larger padding */
  .category-row td {
    padding: 1.1rem 1.25rem;
  }

  .category-name {
    font-weight: 600;
    font-size: 0.95rem;
    color: var(--text-primary);
    letter-spacing: -0.01em;
  }

  /* Feature rows - compact subordinate items */
  .feature-row td {
    padding: 0.5rem 1.25rem;
  }

  .feature-name {
    font-size: 0.82rem;
    color: var(--text-secondary);
    padding-left: 1.25rem;
  }

  /* Responsive */
  @media (max-width: 900px) {
    .category-row td {
      padding: 0.9rem 0.75rem;
    }
    
    .feature-row td {
      padding: 0.4rem 0.75rem;
    }
  }

  @media (max-width: 600px) {
    .feature-name {
      padding-left: 0.75rem;
    }
    
    .category-row td {
      padding: 0.8rem 0.6rem;
    }
    
    .feature-row td {
      padding: 0.35rem 0.6rem;
    }
  }
</style>

