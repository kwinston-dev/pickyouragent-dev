---
import { getCollection } from 'astro:content';
import '../../styles/global.css';
import { featuresRegistry, featureSetSchema } from '../../agents/featureSetSchema';

export async function getStaticPaths() {
  const features = await getCollection('features');
  return features.map((entry) => ({
    params: { category: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();

// Get category color from feature schema meta
const categoryKey = entry.data.categoryKey as keyof typeof featureSetSchema.shape;
const categorySchema = featureSetSchema.shape[categoryKey];
const categoryMeta = categorySchema ? featuresRegistry.get(categorySchema) : null;
const mainColor = categoryMeta?.mainColor || '#3b82f6';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={entry.data.description} />
    <title>{entry.data.title} Features - Pick Your Agent</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,400;0,9..40,500;0,9..40,600;0,9..40,700;1,9..40,400&display=swap" rel="stylesheet">
  </head>
  <body>
    <nav class="navbar">
      <a href="/" class="logo">pickyouragent.dev</a>
      <div class="nav-links">
        <a href="/about">About</a>
        <a href="/docs">Docs</a>
      </div>
    </nav>

    <main class="feature-page">
      <a href="/" class="back-link">‚Üê Back to comparison</a>
      
      <article class="feature-content" style={`--main-feature-color: ${mainColor}`}>
        <Content />
      </article>
    </main>
  </body>
</html>

