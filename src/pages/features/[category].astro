---
import { getCollection } from 'astro:content';
import '../../styles/global.css';
import { allAgents } from '../../agents/allAgents';
import { ParsedTable } from '../../agents/parsedTable';
import Head from '../../components/Head.astro';

export async function getStaticPaths() {
  const features = await getCollection('features');
  return features.map((entry) => ({
    params: { category: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();

// Get category color from parsed table
const parsedTable = new ParsedTable(allAgents);
const feature = parsedTable.getFeature(entry.slug);
const mainColor = feature?.mainColor || '#3b82f6';

// Render all subfeature descriptions
const subfeatureContents = feature && feature.getSubfeatures().length > 0
  ? await Promise.all(
      feature.getSubfeatures().map(async (subfeature) => {
        const { Content: SubfeatureContent } = await subfeature.description.render();
        return {
          key: subfeature.key,
          name: subfeature.name,
          Content: SubfeatureContent,
        };
      })
    )
  : [];
---

<html lang="en">
  <head>
    <Head 
      title={`${entry.data.title} Features - Pick Your Agent`}
      description={entry.data.description}
    />
  </head>
  <body>
    <nav class="navbar">
      <a href="/" class="logo">pickyouragent.dev</a>
      <div class="nav-links">
        <a href="/about">About</a>
        <a href="/docs">Docs</a>
      </div>
    </nav>

    <main class="feature-page">
      <a href="/" class="back-link">â† Back to comparison</a>
      
      <article class="feature-content" style={`--main-feature-color: ${mainColor}`}>
        <Content />
        
        {subfeatureContents.length > 0 && (
          <>
            {subfeatureContents.map((subfeature) => (
              <section class="subfeature" id={subfeature.key}>
                <h2>{subfeature.name}</h2>
                <subfeature.Content />
              </section>
            ))}
          </>
        )}
      </article>
    </main>
  </body>
</html>

