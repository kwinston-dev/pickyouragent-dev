---
import { getCollection } from 'astro:content';
import '../../styles/global.css';
import { allAgents } from '../../agents/allAgents';
import { ParsedTable } from '../../agents/parsedTable';
import Head from '../../components/Head.astro';

export async function getStaticPaths() {
  const features = await getCollection('features');
  return features.map((entry) => ({
    params: { category: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();

// Get category color from parsed table
const parsedTable = new ParsedTable(allAgents);
const feature = parsedTable.getFeature(entry.slug);
const mainColor = feature?.mainColor || '#3b82f6';
---

<html lang="en">
  <head>
    <Head 
      title={`${entry.data.title} Features - Pick Your Agent`}
      description={entry.data.description}
    />
  </head>
  <body>
    <nav class="navbar">
      <a href="/" class="logo">pickyouragent.dev</a>
      <div class="nav-links">
        <a href="/about">About</a>
        <a href="/docs">Docs</a>
      </div>
    </nav>

    <main class="feature-page">
      <a href="/" class="back-link">‚Üê Back to comparison</a>
      
      <article class="feature-content" style={`--main-feature-color: ${mainColor}`}>
        <Content />
      </article>
    </main>
  </body>
</html>

