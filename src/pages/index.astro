---
// Main comparison table page
import '../styles/global.css';
import { z } from 'zod';
import type { Agent } from '../agents/featureSetSchema';
import { FeatureStatus, featuresRegistry, featureSetSchema } from '../agents/featureSetSchema';
import { allAgents } from '../agents/allAgents';

// Load all agents from allAgents.ts
const agents: Agent[] = allAgents;

// Extract display names from registry
function formatDisplayName(key: string): string {
  return key
    .split('-')
    .map(word => word.charAt(0).toUpperCase() + word.slice(1))
    .join(' ');
}

// Build category display names from registry
const categoryDisplayNames: Record<string, string> = {};
const featureDisplayNames: Record<string, string> = {};

const categoryOrderEnum = featureSetSchema.keyof().enum;
const categoryOrder = Object.values(categoryOrderEnum) as (keyof typeof categoryOrderEnum)[];
for (const categoryKey of categoryOrder) {
  const categorySchema = featureSetSchema.shape[categoryKey];
  const categoryMeta = featuresRegistry.get(categorySchema);
  if (!categoryMeta) {
    throw new Error(`Category ${categoryKey} not found in featuresRegistry`);
  }
  categoryDisplayNames[categoryKey] = categoryMeta.name 
    ? formatDisplayName(categoryMeta.name) 
    : formatDisplayName(categoryKey);
  
  // Extract feature names from each category
  if (categorySchema instanceof z.ZodObject) {
    const featureKeys = Object.keys(categorySchema.shape);
    for (const featureKey of featureKeys) {
      const featureSchema = (categorySchema.shape as Record<string, z.ZodType>)[featureKey];
      const featureMeta = featuresRegistry.get(featureSchema);
      featureDisplayNames[featureKey] = featureMeta?.name 
        ? formatDisplayName(featureMeta.name) 
        : formatDisplayName(featureKey);
    }
  }
}

// Define feature order
const featureOrder: Record<string, string[]> = {
  planMode: ['dual-model'],
  documentation: ['filesystem', 'tree', 'multi-file', 'llms-txt', 'auto-merge', 'partial'],
  reasoning: ['explanation-in-natural-language', 'step-by-step-view'],
  tools: ['search-engine', 'fetch-data'],
};

// Category colors for the left border
const categoryColors: Record<string, string> = {
  planMode: 'var(--category-planMode)',
  documentation: 'var(--category-documentation)',
  reasoning: 'var(--category-reasoning)',
  tools: 'var(--category-tools)',
};

// Category slugs for URL generation (content collection slugs)
const categorySlugs: Record<string, string> = {
  planMode: 'planmode',
  documentation: 'documentation',
  reasoning: 'reasoning',
  tools: 'tools',
};

// Helper function to get status text
function getStatusText(status: FeatureStatus | string): string {
  const statusStr = String(status);
  switch (statusStr) {
    case 'supported':
      return 'yes';
    case 'partially-supported':
      return 'partial';
    case 'not-supported':
      return 'no';
    default:
      return '';
  }
}

// Helper function to get status class
function getStatusClass(status: FeatureStatus | string): string {
  const statusStr = String(status);
  switch (statusStr) {
    case 'supported':
      return 'supported';
    case 'partially-supported':
      return 'partially-supported';
    case 'not-supported':
      return 'not-supported';
    default:
      return '';
  }
}

// Helper function to aggregate feature statuses
function aggregateStatus(statuses: (FeatureStatus | string)[]): FeatureStatus {
  if (statuses.length === 0) {
    return FeatureStatus.NotSupported;
  }
  
  const allSupported = statuses.every(s => String(s) === 'supported');
  const allNotSupported = statuses.every(s => String(s) === 'not-supported');
  
  if (allSupported) {
    return FeatureStatus.Supported;
  } else if (allNotSupported) {
    return FeatureStatus.NotSupported;
  } else {
    return FeatureStatus.PartiallySupported;
  }
}
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="A feature-by-feature comparison of AI coding agents for developers" />
    <title>Pick Your Agent - Compare AI Coding Agents</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,400;0,9..40,500;0,9..40,600;0,9..40,700;1,9..40,400&display=swap" rel="stylesheet">
  </head>
  <body>
    <nav class="navbar">
      <a href="/" class="logo">pickyouragent.dev</a>
      <div class="nav-links">
        <a href="/about">About</a>
        <a href="/docs">Docs</a>
      </div>
    </nav>

    <main>
      <section class="hero">
        <h1>Pick your coding agent<br/>with confidence</h1>
        <p class="subtitle">A feature-by-feature comparison of AI coding agents for developers.</p>
      </section>
      
      <div class="table-card">
        <table>
          <thead>
            <tr>
              <th class="feature-col">Feature</th>
              {agents.map((agent) => (
                <th class="agent-col">{agent.meta.name}</th>
              ))}
            </tr>
          </thead>
          <tbody>
            {categoryOrder.flatMap((categoryKey: keyof Agent['features']) => {
              const category = categoryKey;
              const features = featureOrder[category];
              const categoryColor = categoryColors[category];
              return [
                <tr class="category-row" data-category={category}>
                  <td class="category-cell" style={`--category-color: ${categoryColor}`}>
                    <a href={`/features/${categorySlugs[category] || category}`} class="category-name category-link" style={`--category-color: ${categoryColor}`}>
                      {categoryDisplayNames[category]}
                    </a>
                  </td>
                  {agents.map((agent) => {
                    // Aggregate all feature statuses in this category
                    const statuses = features.map((featureKey) => {
                      return agent.features[category][featureKey as keyof typeof agent.features[typeof category]];
                    });
                    const aggregatedStatus = aggregateStatus(statuses);
                    return (
                      <td>
                        <span class={`badge ${getStatusClass(aggregatedStatus)}`}>
                          <span class="badge-icon">{aggregatedStatus === FeatureStatus.NotSupported ? '✕' : '✓'}</span>
                          {getStatusText(aggregatedStatus)}
                        </span>
                      </td>
                    );
                  })}
                </tr>,
                ...features.map((featureKey) => (
                  <tr class="feature-row" data-category={category}>
                    <td class="feature-cell" style={`--category-color: ${categoryColor}`}>
                      <a href={`/features/${categorySlugs[category] || category}#${featureKey}`} class="feature-name feature-link">
                        {featureDisplayNames[featureKey]}
                      </a>
                    </td>
                    {agents.map((agent) => {
                      const status = agent.features[category][featureKey as keyof typeof agent.features[typeof category]];
                      return (
                        <td>
                          <span class={`badge ${getStatusClass(status)}`}>
                            <span class="badge-icon">{status === 'not-supported' ? '✕' : '✓'}</span>
                            {getStatusText(status)}
                          </span>
                        </td>
                      );
                    })}
                  </tr>
                ))
              ];
            })}
          </tbody>
        </table>
      </div>
    </main>
  </body>
</html>
